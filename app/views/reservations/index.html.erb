<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>User</th>
      <th>Seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.flight_id %></td>
        <td><%= reservation.flight.origin %></td>
        <td><%= reservation.flight.destination %></td>
        <td><%= reservation.flight.date %></td>
        <td><%= reservation.user.name %></td>
        <td><%= reservation.seat %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

