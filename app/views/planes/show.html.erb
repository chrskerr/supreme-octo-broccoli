<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @plane.name %>
</p>

<p>
  <strong>Row:</strong>
  <%= @plane.row %>
</p>

<p>
  <strong>Column:</strong>
  <%= @plane.column %>
</p>

<p>
  <strong>Flights:</strong>
  <ul>
    <% @plane.flights.each do | flight | %>
      <li><%= link_to flight.number, flight_path(flight.id) %></li>
    <% end %>
</ul>
</p>

<%= link_to 'Edit', edit_plane_path(@plane) %> |
<%= link_to 'Destroy', @plane, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', planes_path %>
