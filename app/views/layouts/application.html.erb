<!DOCTYPE html>
<html>
  <head>
    <title>BurningServer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/kognise/water.css@latest/dist/light.min.css">


  </head>

  <body>
    <nav>
      <h4>User Portal</h4>
      <%= link_to 'Reservations', reservations_path %>
      <%= link_to 'Flights', flights_path %>
      <%= link_to 'Planes', planes_path %>
      <% if @current_user.present? && @current_user.admin %>
        <%= link_to 'Users', users_path %>
      <% end %>
      <% if @current_user.nil? %>
        <%= link_to 'Log in', login_path, :class => 'nav-item mr-1 btn btn-outline-light' %>
        <%= link_to 'New Account', new_user_path, :class => 'nav-item mr-1 btn btn-outline-light' %>
      <% else %>
        <%= link_to 'Log out', root_path, :method => 'delete', :class => 'nav-item mr-1 btn btn-outline-light' %>
      <% end %>
    </nav>
    <nav>
      <% if @current_user.present? %>
        <h4>Hello <%= @current_user.name %></h4>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
