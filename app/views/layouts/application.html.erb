<!DOCTYPE html>
<html>

<head>
	<title>BurningServer</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-dark">
		<a class="navbar-brand m-2 btn btn-bg btn-outline-light" href="https://chris-aleks-burning-client.herokuapp.com" > SkyFlying </a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-item m-2 btn btn-outline-light" href="https://chris-aleks-burning-client.herokuapp.com">Home</a>
				</li>
				<% if @current_user.nil? %>
					<li class="nav-item"><%= link_to 'New Account', new_user_path, :class => 'nav-item m-2 btn btn-outline-light'  %></li>
					<li class="nav-item"><%= link_to 'Log in', login_path, :class => 'nav-item m-2 btn btn-outline-light'  %></li>
				<% else %>
					<%= link_to 'Flights', flights_path, :class => 'nav-item m-2 btn btn-outline-light'  %>
					<%= link_to 'Reservations', reservations_path, :class => 'nav-item m-2 btn btn-outline-light' %>
					<%= link_to 'Planes', planes_path, :class => 'nav-item m-2 btn btn-outline-light'  %>
					<% if @current_user.present? && @current_user.admin %>
						<%= link_to 'Users', users_path, :class => 'nav-item m-2 btn btn-outline-light'  %>
					<% end %>
					<li class="nav-item"><%= link_to "User: #{@current_user.name}", user_path(@current_user.id), :class => 'nav-item m-2 ml-5 btn btn-outline-light' %></li>
					<li class="nav-item"><%= link_to 'Log out', root_path, :method => 'delete', :class => 'nav-item m-2 btn btn-outline-light text-light' %></li>
				<% end %>
			</ul>
		</div>
	</nav>
	
	<div class='container'>
		<%= yield %>
	</div>
</body>

</html>